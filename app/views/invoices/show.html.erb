    <head>
      <tr>
        <th>Item</th>
        <th>Order Qty</th>
        <th>Backorder Qty</th>
        <th>Shipped Qty</th>
        <th>Unit Price</th>
        <th>Invoice Price</th>
      </tr>
    </head>
    <tbody>
      <% @invoice.each do |invoice| %>
        <tr>
          <td><%= invoice.item_id %></td>
          <td><%= invoice.order_qty.to_i %></td>
          <td><%= invoice.backorder_qty.to_i %></td>
          <td><%= invoice.shipped_qty.to_i %></td>
          <td><%= invoice.unit_price %></td>
          <td><%= invoice.invoice_price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
