<div class="container">
  <h1>Sales</h1>

  <div id="msgid"></div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Customer</th>
        <th>1</th>
        <th>2</th>
        <th>3</th>
        <th>4</th>
        <th>5</th>
        <th>6</th>
        <th>7</th>
        <th>8</th>
        <th>9</th>
        <th>10</th>
        <th>11</th>
        <th>12</th>
        <th>Total</th>
      </tr>
    </thead>

    <tbody>
      <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.customer%></td>
        <td><%= invoice.customer_id %></td>
        <td><%= invoice.customer.customer_name %></td>
        <td><%= invoice.order_id.strip %></td>
        <td><%= invoice.sales_person_id %></td>
        <td><%= invoice.invoice_date %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>